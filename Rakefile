begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.version = "0.0.1"
    gem.author = "luigibyte"
    gem.name = "js_router"
    gem.summary = "Javascript Routes Engine for Rails 3"
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
  end
rescue
  puts "Jeweler or one of its dependencies is not installed."
end
